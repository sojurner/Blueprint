{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es5", "es6", "es7"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "paths": {
      "@atoms/*": ["components/atoms/*"],
      "@molecules/*": ["components/molecules/*"],
      "@pages/*": ["components/pages/*"],
      "@templates/*": ["components/templates/*"],
      "@factories/*": ["factories/*"]
    },
    "removeComments": true,
    "strict": true,
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": ["dist", "build", "node_modules", "src/__tests__", "src/jest"],
  "compileOnSave": true,
  "types": ["material-ui", "react"],
  "include": ["./src/**/*", "./typings/**/*"],
  "filesGlob": ["**/*.ts", "**/*.tsx", "!node_modules/**"]
}
